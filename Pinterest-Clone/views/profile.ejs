<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen text-white bg-gray-900 pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>

    <!-- Profile Image -->
    <div class="prof-dets flex flex-col items-center mt-10">
        <div class="relative ">
            <span id="uploadimage" class="absolute w-6 h-6 right-0 bottom-0 bg-gray-500 rounded-full flex justify-center items-center">
                <i class="text-white text-xs font-semibold ri-edit-line"></i>
            </span>
            <div class="w-24 h-24 rounded-full bg-white overflow-hidden">
                <img src="/images/uploads/<%= user.profileImage %>" alt="" class="w-full h-full object-center object-cover">
            </div>
        </div>
        <h1 class="font-semibold text-lg "><%= user.name %></h1>
        <h1 class="font-semibold text-xs ">@<%= user.username %></h1>
        <a href="/edit" class="px-7 py-1 mt-1 text-xs font-semibold bg-gray-300 rounded-full hover:bg-gray-600">Edit</a>
        <a href="/addpost" class="px-7 py-1 mt-1 text-xs font-semibold bg-red-500 rounded-md hover:bg-red-800">Add New Post</a>

    </div>

    <!-- Cards Section -->

    <div class="cards flex flex-wrap gap-10 px-10 mt-2">
        <div class="card">
            <div class="w-40 h-28 bg-white rounded-lg overflow-hidden" >
                <img src="/images/uploads/<%= user?.pins[0]?.image%>" alt="" class="object-cover w-full h-full ">
            </div>
            <a href="/show/pins" class="font-semibold text-sm mt-5">Your Pins</a>
            <h5 class="font-medium text-xs opacity-60"> <%= user.pins.length %> Pins</h5>
        </div>
    </div>
</div>

<script>
    // Accessing the form
    document.querySelector("#uploadimage").addEventListener("click",function(){
        document.querySelector("#uploadform input").click()
    })
    // submitting the form when image is changing
    document.querySelector("#uploadform input").addEventListener("change",function(){
        document.querySelector("#uploadform").submit()
    })

</script>

