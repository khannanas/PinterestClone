<% include ./partials/header.ejs %>

<div class="w-full min-h-screen text-white font-semibold  px-3 py-1 bg-gray-900">
    <h1 class="text-lg">Create New Post</h1>
    <hr class="opacity-10 mt-3">

    <form action="/createpin" method="post" enctype="multipart/form-data">
        <input class="block py-2 px-3 w-60" type="file" name="pinPost">
        <input class="text-black block py-2 px-3 w-60 mt-2 rounded-md" type="text" placeholder="Title" name="pinTitle">
        <textarea class="text-black block py-2 px-3 w-60 h-40 mt-2 rounded-md"  placeholder="Description" name="pinDes"></textarea>
        <input class="block py-2 px-3 w-60 mt-2 text-xs bg-red-500 rounded-md hover:bg-red-800" type="submit" value="Create Post">
        
    </form>

</div>

