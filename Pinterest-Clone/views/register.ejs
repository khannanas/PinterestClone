<% include ./partials/header.ejs %>

<div class="bg-dark-100 flex justify-center items-center h-screen ">
  <div class="max-w-md w-full px-6 py-8 bg-white shadow-md rounded-md overflow-hidden">
      <h2 class="text-center text-3xl tracking-tight font-semibold text-gray-800 mb-6">Create New Account</h2>
      <form action="/register" method="post">
          <div class="mb-4">
              <input type="text" name="username" class="border-2 border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:border-blue-500" placeholder="Username" required>
          </div>
          <div class="mb-4">
              <input type="text" name="fullname" class="border-2 border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:border-blue-500" placeholder="FullName" required>
          </div>
          <div class="mb-4">
              <input type="email" name="email" class="border-2 border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:border-blue-500" placeholder="Email" required>
          </div>
          <div class="mb-4">
              <input type="number" name="contact" class="border-2 border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:border-blue-500" placeholder="Contact" required>
          </div>
          <div class="mb-6">
              <input type="password" name="password" class="border-2 border-gray-300 rounded-md px-4 py-2 w-full focus:outline-none focus:border-blue-500" placeholder="Enter your password" required>
          </div>
          <div class="flex items-center justify-center">
              <button type="submit" class="bg-red-500 text-white py-2 px-4 mb-4 rounded-md hover:bg-red-600 focus:outline-none focus:bg-red-600">Create Account</button>
          </div>
      </form>
      <div class="flex flex-col"><p class="text-xs text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy.</p>
        <a href="/" class="text-black-500 text-center mt-4 ">Login to Existing Account</a>
    </div>
  </div>
</div>
<% include ./partials/footer.ejs %>
  
